@page "/create-assignment"


<MudPaper Class="pa-4 mb-4">
    <MudStack Row="true">
        <MudTextField @bind-Value="@assignmentName" Label="Assignment Name"></MudTextField>
        <MudTextField @bind-Value="@classroomAssignment" Label="Classroom Assignemnt"></MudTextField>
    </MudStack>
    <MudStack>
        <MudDatePicker @bind-Date="date"></MudDatePicker>
        <MudTimePicker @bind-Time="time"></MudTimePicker>
    </MudStack>
    <MudButton Class="ma-4 pa-2" Variant="Variant.Filled"  Color="Color.Primary" OnClick="() => SubmitAssignment()">Submit</MudButton>
</MudPaper>
