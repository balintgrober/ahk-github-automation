@page "/edit-subject/{subjectId}"

<MudPaper Class="pa-4 mb-4">
    <MudStack Row="true">
        <MudTextField @bind-Value="@subject.SubjectCode" Label="Course Code"></MudTextField>
        <MudTextField @bind-Value="@subject.Name" Label="Name"></MudTextField>
    </MudStack>
    <MudTextField @bind-Value="@subject.Semester" Label="Semester"></MudTextField>
    <MudTextField @bind-Value="@subject.GithubOrg" Label="Github Organization"></MudTextField>
    <MudTextField @bind-Value="@subject.AhkConfig" Label="Ahk Config"></MudTextField>
    <MudButton Class="ma-4 pa-2" Variant="Variant.Filled" Color="Color.Primary" OnClick="() => Submit()">Submit</MudButton>
</MudPaper>
